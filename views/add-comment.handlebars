<div class="login-card">
    <h2 class="page-title">Add Comment</h2>
    <p>For: {{post.title}}</p>
    <form class="form comment-form">
        <div class="form-group">
            <label for="comment-desc">Comment:</label>
            <input class="form-input" type="text" id="comment-desc" />
        </div>
        <div class="form-group">
            <label for="password-login">Post:</label>
            <input class="form-input" type="text" id="post" value="{{post.title}}" />
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
    </form>
</div>

<script src="./js/add-comment.js"></script>